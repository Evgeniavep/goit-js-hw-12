
{{#each this}}
<div class="country-card__container">
    <img src='{{flag}}' alt='{{name}}'>
    <h1>{{name}}</h1>
    <ul class="card__inform">
        <li><h2>Capital: </h2>{{capital}}</li>
        <li><h2>Population: </h2>{{populaton}}</li>
        <li><h2>Languages: </h2>{{#each languages}}{{this.name}}</li>{{/each}}
    </ul>
</div>{{/each}}